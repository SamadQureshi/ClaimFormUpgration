@model IEnumerable<TCO.TFM.WDMS.ViewModels.ViewModels.OpdExpenseVM>

@{
    ViewBag.Title = "Form List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary card-header-icon">
                <div class="card-icon">
                    <i class="material-icons">assignment</i>
                </div>
                <h4 class="card-title">Form List</h4>
            </div>
            <div class="card-body">
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover responsive" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayName("Expense Number")</th>
                                <th>@Html.DisplayName("Employee Name")</th>
                                <th>@Html.DisplayName("Employee Department")</th>
                                <th>@Html.DisplayName("Claim For Month")</th>
                                <th>@Html.DisplayName("Claim For Year")</th>
                                <th>@Html.DisplayName("Status")</th>
                                <th>@Html.DisplayName("Total Amount Claimed")</th>
                                <th>@Html.DisplayName("Expense Type")</th>
                                <th class="disabled-sorting all text-right actions-col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExpenseNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmployeeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmployeeDepartment)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClaimMonth)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClaimYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalAmountClaimed)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OpdType)
                                    </td>
                                    <td class="actions-col text-right">
                                        @if (item.OpdType.Equals("OPD Expense"))
                                        {
                                            <a href="javascript:;" onclick="md.initRedirectUrl('HrApproval','HrOPDExpense','\'@TCO.TFM.WDMS.Common.Utils.Security.EncryptId(item.ID)\'');" class="btn btn-link btn-warning btn-just-icon edit"><i class="material-icons">edit</i></a>
                                        }
                                        @if (item.OpdType.Equals("Hospital Expense"))
                                        {
                                            <a href="javascript:;" onclick="md.initRedirectUrl('HrApproval','HrHospitalExpense','\'@TCO.TFM.WDMS.Common.Utils.Security.EncryptId(item.ID)\'');"  class="btn btn-link btn-warning btn-just-icon edit"><i class="material-icons">edit</i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
