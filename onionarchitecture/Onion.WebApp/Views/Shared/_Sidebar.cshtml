<div class="sidebar" data-color="purple" data-background-color="white" data-image="/Content/images/sidebar-3.jpg">
    <div class="logo">
        <a href="@Url.Action("Index", "Home")" class="simple-text logo-mini">
            CF
        </a>
        <a href="@Url.Action("Index", "Home")" class="simple-text logo-normal">
            Claim Form
        </a>
    </div>

    <div class="sidebar-wrapper">
        @if (Request.IsAuthenticated)
        {
            <div class="user">
                <div class="photo">
                    <img src="~/Content/images/faces/avatar.png" alt="@(ViewBag.UserName)" />
                </div>
                <div class="user-info">
                    <a data-toggle="collapse" href="#collapseExample" class="username">
                        <span>
                            @(ViewBag.UserName)
                            <b class="caret"></b>
                        </span>
                    </a>
                    <div class="collapse" id="collapseExample">
                        <ul class="nav">
                            @if (Request.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("SignOut", "OfficeManager", null, Request.Url.Scheme)">
                                        <span class="sidebar-mini"> LO </span>
                                        <span class="sidebar-normal"> Log out </span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    <ul class="nav">
        <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">
            <a class="nav-link" href="@Url.Action("Index", "Home")">
                <i class="material-icons">dashboard</i>
                <p>Home</p>
            </a>
        </li>
        @if (ViewContext.RouteData.Values["controller"].ToString().Contains("OPDE") || ViewContext.RouteData.Values["controller"].ToString().Contains("OpdE"))
