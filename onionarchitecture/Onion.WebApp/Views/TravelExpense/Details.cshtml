@model TCO.TFM.WDMS.ViewModels.ViewModels.TravelExpenseMasterDetail

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">library_books</i>
                    </div>
                    <h4 class="card-title">Employee Expense Details</h4>
                </div>
                <div class="card-body">
                    <div class="row mt-3">
                        @Html.Partial("_TravelExpenseView", Model)
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Finance Information</h4>
                                </div>
                                <div class="card-body">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.FinanceComment, "Finance Comment", htmlAttributes: new { @class = "bmd-label-floating" })
                                            @Html.TextBoxFor(model => model.FinanceComment, new { @readonly = "readonly", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.FinanceApproval, "Finance Approval", htmlAttributes: new { @class = "bmd-label-floating" })
                                            @Html.TextBoxFor(model => model.FinanceApproval, new { @readonly = "readonly", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.FinanceName, "Finance Name", htmlAttributes: new { @class = "bmd-label-floating" })
                                            @Html.TextBoxFor(model => model.FinanceName, new { @readonly = "readonly", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.FinanceApprovalDate, "Finance Approval Date", htmlAttributes: new { @class = "bmd-label-floating" })
                                            @Html.TextBoxFor(model => model.FinanceApprovalDate, "{0:MM/dd/yyyy  h:mm tt}", new { @readonly = "readonly", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Manager Information</h4>
                                </div>
                                <div class="card-body">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ManagementComment, "Manager Comment", htmlAttributes: new { @class = "bmd-label-floating" })
                                            @Html.TextBoxFor(model => model.ManagementComment, new { @readonly = "readonly", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ManagementApproval, "Manager Approval", htmlAttributes: new { @class = "bmd-label-floating" })
                                            @Html.TextBoxFor(model => model.ManagementApproval, new { @readonly = "readonly", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ManagementName, "Manager Name", htmlAttributes: new { @class = "bmd-label-floating" })
                                            @Html.TextBoxFor(model => model.ManagementName, new { @readonly = "readonly", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ManagementApprovalDate, "Manager Approval Date", htmlAttributes: new { @class = "bmd-label-floating" })
                                            @Html.TextBoxFor(model => model.ManagementApprovalDate, "{0:MM/dd/yyyy  h:mm tt}", new { @readonly = "readonly", @class = "form-control" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("_OPDTravelExpenseView", Model)
            <div class="col-md-12">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>




