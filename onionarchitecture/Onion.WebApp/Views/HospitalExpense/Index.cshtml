@model IEnumerable<TCO.TFM.WDMS.ViewModels.ViewModels.OpdExpenseVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">assignment</i>
                    </div>
                    <h4 class="card-title">Hospital Claim Form List</h4>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                        @Html.ActionLink("Create New", "Create")
                    </div>
                    <div class="material-datatables">
                        <table id="datatables" class="table table-striped table-no-bordered table-hover responsive" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayName("Employee Name")</th>
                                    <th>@Html.DisplayName("Total Amount Claimed")</th>
                                    <th>@Html.DisplayName("Date of illness Noticed")</th>
                                    <th>@Html.DisplayName("Date of recovery")</th>
                                    <th>@Html.DisplayName("Hospital Name")</th>
                                    <th>@Html.DisplayName("Doctor Name")</th>
                                    <th>@Html.DisplayName("Period Confinement From Date")</th>
                                    <th>@Html.DisplayName("Period Confinement To Date")</th>
                                    <th class="disabled-sorting all text-right actions-col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TotalAmountClaimed)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateIllnessNoticed)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateRecovery)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HospitalName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PeriodConfinementDateFrom)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PeriodConfinementDateTo)</td>
                                        <td class="actions-col text-right">
                                            <a href="@Url.Action("Edit", "OpdExpense", new { id = item.OPDEXPENSE_ID })" class="btn btn-link btn-warning btn-just-icon edit"><i class="material-icons">edit</i></a>
                                            <a href="@Url.Action("Details", "OpdExpense", new { id = item.OPDEXPENSE_ID })" class="btn btn-link btn-info btn-just-icon like"><i class="material-icons">dvr</i></a>
                                            <a href="javascript:;" onclick="md.initShowSwal('warning-message-and-cancel', @Html.DisplayFor(modelItem => item.OPDEXPENSE_ID))" class="btn btn-link btn-danger btn-just-icon remove"><i class="material-icons">close</i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
